body {
    background-image: radial-gradient( circle, #59c6fd, #70b1ba, #707374, #2E2F2F, black);
   text-align: center;
   font-family: "Agency FB";
   font-size: 20px;
   font-weight: bold;
   font-stretch: narrower;
}
h1 {
    font-family: "Agency FB";
   font-size: 60px;
   font-weight: bold;
   font-stretch: narrower;
}
button {
    font-size: 20px;
    text-align: center;
    background-color: black;
    font-family: "Agency FB";
   font-weight: bold;
   font-stretch: narrower;
   color: #f7d8ef; opacity: 100;
   border-radius: 3px;
}
input {
    font-size: 20px;
    text-align: center;
    background-color: black;
    font-family: "Agency FB";
   font-weight: bold;
   font-stretch: narrower;
   color: #f7d8ef; opacity: 100;
   border-radius: 3px;
}
#form {
    width: 400px;
    margin: 10vh auto 0 auto;
    padding: 20px;
    background-color: rgb(159, 172, 186); 
    border-radius: 185px;
    font-size: 20px;
    box-shadow: 10px 10px 5px #415050;
}
#form h1 {
    font-family: "Agency FB";
    font-size: 45px;
    font-weight: bold;
    font-stretch: narrower;
    text-shadow: 2px 2px 3px #415050;
}
#form button {
    cursor: pointer;
    font-size: 20px;
    font-family: "Agency FB";
    background-color: black;
    font-weight: bold;
   font-stretch: narrower;
   color: #f7d8ef;
   border-radius: 3px;
   text-align: center;
   width: 25%;
}
.input-control input {
    border: 2px dotted rgb(178, 234, 250);
	border-radius: 3px;
}

.input-control.success input {
    border-color: #49b787;
}

.input-control.error input {
    border-color: #e56d89;
}

.input-control .error {
    color: #e56d89;
    font-size: 9px;
    height: 13px;
}
